@model SysBank.BLL.Models.DebitCardApplication

@{
    ViewBag.Title = "DebitCardApplication";
}

<h2>DebitCardApplication</h2>


<div class="form-horizontal">
    <h4>DebitCardApplication</h4>
    <hr />
    @if (Model.Accounts.Any())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IsContactless, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsContactless)
                    @Html.ValidationMessageFor(model => model.IsContactless, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AccountId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.AccountId, Model.Accounts)
            </div>
        </div>
    }
    else
    { <div>Aktualnie nie posiadasz otwartych rachunków. W przypadku tego typu karty jest to wymagane, aby dokonać powiązania. Aby otworzyć nowy rachunek kliknij tutaj:</div>
        <button class="btn btn-success">Otwórz nowy rachunek</button>
    }
</div>

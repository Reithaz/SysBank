@model IEnumerable<SysBank.BLL.Models.PaymentCardsModel>

@{
    ViewBag.Title = "Index";
}

<h2>Lista kart płatniczych</h2>

@if (Model.Any()) { 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IsBlockedString)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDateShort)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IsBlockedString)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDateShort)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @if (item.TypeId == 1001) { 
            @Html.ActionLink("Symulacja", "CreditCardSim", new { id=item.Id }) 
            }
            else if (item.TypeId == 1002)
            {
                @Html.ActionLink("Symulacja", "DebitCardSim", new { id = item.Id })
            }
            else if (item.TypeId == 1003)
            {
                @Html.ActionLink("Symulacja", "ATMCardSim", new { id = item.Id })
            }
            
        </td>
    </tr>
}

</table>}
else { @Html.Label("Brak zaakceptowanych kart płatniczych") }
